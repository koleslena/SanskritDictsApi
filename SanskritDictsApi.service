[Unit]
Description=Sanskrit Dicts Api
After=network.target

[Service]
EnvironmentFile=/etc/environment
ExecStart=cd /home/SanskritDictsApi/ && .SanskritDictsApi
ExecReload=cd /home/SanskritDictsApi/ && .SanskritDictsApi
WorkingDirectory=/home/SanskritDictsApi/
KillMode=process
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
